<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="in.novopay.mymusicplayer.MainActivity">


    <ImageView
        android:id="@+id/album_cover"
        android:src="@drawable/khalnayak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar

        android:id="@+id/activity_main_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="69dp">

        <TableRow>


            <Button
                android:id="@+id/activity_main_rewind"
                android:layout_width="69dp"
                android:layout_height="38dp" />

            <Button
                android:id="@+id/activity_main_play"
                android:layout_width="69dp"
                android:layout_height="38dp" />

            <Button
                android:id="@+id/activity_main_fastforward"
                android:layout_width="69dp"
                android:layout_height="38dp" />

        </TableRow>
    </TableLayout>


</LinearLayout>


